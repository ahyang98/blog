			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 从response header中获取值\r",
							"var data = postman.getResponseHeader(\"X-Jwt-Token\");\r",
							"\r",
							"// 将获取的值保存到环境变量中\r",
							"pm.environment.set(\"JWTToken\", data);\r",
							"\r",
							"// 从response header中获取值\r",
							"var refreshToken = postman.getResponseHeader(\"X-Refresh-Token\");\r",
							"\r",
							"// 将获取的值保存到环境变量中\r",
							"pm.environment.set(\"RefreshToken\", refreshToken);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
